
@{
    ViewBag.Title = "BindingById";
    string photo = "anonymous.jpg";
    // change photo by fId
    if (ViewBag.Customer != null)
    {
        photo = ViewBag.Customer.fId + ".jpg";
    }
}


<h2>客戶資料查詢</h2>
<br />
@{
    if (ViewBag.Customer == null)
    {
        <h3>查無任何資料</h3>
    }
    else
    {
        <img src="~/Images/@photo" alt="customer photo" width="200" height="180" />
        <h4>客戶姓名：@ViewBag.Customer.fName</h4>
        <h4>客戶電話：@ViewBag.Customer.fPhone</h4>
    }
}


