@model prjMvcDemo.Models.Customer
@{
    ViewBag.Title = "BindingById";

    string photo = "anonymous.jpg";

    // change photo by fId
    if (Model != null)
    {
        photo = Model.fId + ".jpg";
    }
}


<h2>客戶資料查詢</h2>
<br />
@{
    if (Model == null)
    {
        <h3>查無任何資料</h3>
    }
    else
    {
        <img src="~/Images/@photo" alt="customer photo" width="200" height="180" />
        <h4>客戶姓名：@Model.fName</h4>
        <h4>客戶電話：@Model.fPhone</h4>
    }
}




