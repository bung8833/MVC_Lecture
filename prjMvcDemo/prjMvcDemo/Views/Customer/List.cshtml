@using prjMvcDemo.Models
@model List<Customer>
@{
    ViewBag.Title = "List";
}

<h2>客戶資料一覽表</h2>
<a href="~/Customer/create">新增客戶</a>
<p>
    @using (Html.BeginForm())
    {
        @:關鍵字 @Html.TextBox("txtKeyword") <input type="submit" value="查詢" />
    }
</p>

<p>
    <table border="1">
        <tr>
            <td>序號</td>
            <td>姓名</td>
            <td>電話</td>
            <td>電子郵件</td>
            <td>地址</td>
            <td>編輯</td>
            <td>刪除</td>
        </tr>
        @{
            int count = 0;
            foreach (Customer customer in Model)
            {
                count++;
                <tr>
                    <td>@count</td>
                    <td>@customer.fName</td>
                    <td>@customer.fPhone</td>
                    <td>@customer.fEmail</td>
                    <td>@customer.fAddress</td>
                    <td>@Html.ActionLink("編輯", "Edit", "Customer", new { id = @customer.fId })</td>
                    <td>
                        @Html.ActionLink("刪除", "Delete", "Customer", new { id = @customer.fId },
                   new { onclick = "return confirm('確定要刪除嗎？')" })
                </td>
            </tr>
        }
        }
    </table>
</p>


